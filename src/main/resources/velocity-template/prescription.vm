<!DOCTYPE html>
<html>
<head>
<style>
table {
  font-family: 'Open Sans', sans-serif;
  border-collapse: collapse;
  width: 100%;
  margin-bottom: 10px;
  font-size: 10px;
}

tbody, td,th {
  padding: 8px;
  border: 1px solid #000000;
}

th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: center;
  background-color: #4CAF50;
  color: white;
}
</style>
</head>
<body>

<table>
  <tr>
    <th colspan="2"><span>#if($clinicname) $clinicname - Prescription #else Prescription #end</span></th>
  </tr>
  <tr>
  	<td>$doctorname, $qualification</td>
  	<td style="text-align: right;"><div>Prescription Date: $date</div><div>$cliniccontact</div></td>
  </tr>
</table>  

<table>
   <tbody>
      <tr>
         <th colspan="5">
            Patient Details
         </th>
      </tr>
      <tr>
         <td>
            Patient No.
         </td>
         <td>
            Name
         </td>
         <td>
            Age
         </td>
         <td>
            Gender
         </td>
         <td>
          	Contact
         </td>
      </tr>
      <tr>
         <td>
            #if ($patno) $patno #end 
         </td>
         <td>
           #if ($patname) $patname #end 
         </td>
         <td>
           #if ($patage) $patage #end 
         </td>
         <td>
            #if ($patgender) $patgender #end 
         </td>
         <td>
         	#if ($patcontact) $patcontact #end
         </td>
      </tr>
   </tbody>
</table>

<table>
   <tbody>
      <tr>
         <th colspan="7">
            Patient Vitals
         </th>
      </tr>
      <tr>
         <td>
            Pulse rate (BPM)
         </td>
         <td>
            BP Systolic (mm Hg)
         </td>
         <td>
            BP Diastolic (mm Hg)
         </td>
         <td>
            Temperature (F)
         </td>
         <td>
          	Height (cms)
         </td>
         <td>
          	Weight (Kg)
         </td>
         <td>
          	BMI
         </td>
      </tr>
      <tr>
         <td>
            #if ($pulserate) $pulserate #end
         </td>
         <td>
           #if ($bpsys) $bpsys #end
         </td>
         <td>
           #if ($bpdias) $bpdias #end 
         </td>
         <td>
           #if ($temp) $temp #end
         </td>
         <td>
           #if ($height) $height #end 
         </td>
         <td>
           #if ($weight) $weight #end
         </td>
         <td>
           #if ($bmi) $bmi #end
         </td>
      </tr>
   </tbody>
</table>

<table>
	<tbody>
		<tr>
			<th colspan="2">Chief Complaints</th>
		</tr>
	#if($chiefcomplaints)	
	#set( $count = 1 )	
	#foreach( $cc in $chiefcomplaints )
		<tr>
			<td>$count</td>
			<td>$cc</td>
		</tr>
	 #set( $count = $count + 1 )
     #end	
     #else
     	<tr>
			<td colspan="2">NA</td>
		</tr>
	#end	
	</tbody>
</table>

<table>
	<tbody>
		<tr>
			<th>Diagnosis</th>
		</tr>
		<tr>
			<td>#if ($diagnosis) $diagnosis #else NA #end</td>
		</tr>
	</tbody>
</table>


<table>
   <tbody>
      <tr>
         <th colspan="5">
            Medicine Advice
         </th>
      </tr>
      <tr>
         <td>
            Sl. No.
         </td>
         <td>
            Medicine
         </td>
         <td>
            Days
         </td>
         <td>
            Dosage Direction
         </td>
         <td>
          	Dosage Timing
         </td>
      </tr>
      #if($medicineadvice)
      #set( $count = 1 )
      #foreach( $ma in $medicineadvice )
      <tr>
         <td>
            $count
         </td>
         <td>
            $ma.name
         </td>
         <td>
            $ma.days
         </td>
         <td>
            $ma.dosageDirection
         </td>
         <td>
         	$binDecUtil.getDosageTimingsFromDec($ma.dosage)
         </td>
      </tr>
      #set( $count = $count + 1 )
      #end
      <tr>
	      <td colspan="5" style="font-size: 8px;">
	             <STRONG>Dosage Timings:</STRONG> SOS - if necessary, BF - Before breakfast, AF - After breakfast, BL - Before lunch, AL - After lunch, EV - Evening, BD - Before dinner, AD - After dinner
	      </td>
      </tr>
      #else
      <tr>
      	<td colspan="5">NA</td>
      </tr>
      #end
   </tbody>
</table>

<table style="margin-bottom: 50px">
	<tbody>
		<tr>
			<th colspan="2">Examination (Todo - if any)</th>
		</tr>
	#if($examinations)	
	#set( $count = 1 )	
	#foreach( $examination in $examinations )
		<tr>
			<td>$count</td>
			<td>$examination</td>
		</tr>
	 #set( $count = $count + 1 )
     #end	
     #else
     	<tr>
			<td colspan="2">NA</td>
		</tr>
	#end	
	</tbody>
</table>

<div style="font-size: 10px">Doctor Signature: $doctorsign</div>

</body>
</html>